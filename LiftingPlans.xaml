<Controls:MetroWindow
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Lifting_App.LiftingPlans"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lifting_App"
        mc:Ignorable="d"
        Title="LiftingPlans" Height="450" Width="800" Background="Black" WindowStartupLocation="CenterScreen" Loaded="MetroWindow_Loaded"
    
    
    
    > 
        
    <Grid>
        <ListBox Name="ShowPlans" Width="500" Height="300" SelectionChanged="ShowPlans_SelectionChanged"  > </ListBox>
        <Button Width="100" Height="50" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Show Plan" FontSize="12" Click="Button_Click"   ></Button>
        <ComboBox Width="100" Height="50" VerticalAlignment="Center" HorizontalAlignment="Left"  FontSize="12" Name="PlanComboBox" SelectionChanged="PlanComboBox_SelectionChanged"    ></ComboBox>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" Height="50" Name="LabelTest"  > </TextBlock>
    </Grid>
</Controls:MetroWindow>
