<Window x:Class="Lifting_App.ExerciseGuide"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lifting_App"
        mc:Ignorable="d"
        Title="ExerciseGuide" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Name="ImageTest" Content="Squat" FontSize="50" Click="Button_Click" Grid.Row="1" >  </Button>
        <Button Name="DeadLift" Content="DeadLift" FontSize="50" Click="Button_Click" Grid.Row="1" Grid.Column="1" ></Button>
        <Button Name="Bench" Content="Bench " FontSize="50" Click="Button_Click" Grid.Row="1" Grid.Column="2" ></Button>
        <Image Name="MyImage" Grid.Row="3" Grid.Column="0" Width="240" Height="100">  </Image>
    </Grid>
</Window>
