<Window x:Class="Lifting_App.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lifting_App"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">
    
    <Grid>
        <StackPanel VerticalAlignment="Center"  >
            <Label Width="100" Height="50"  >Login</Label>
            <TextBox Width="100" Height="50" Name="UserLogin"></TextBox>
            <Label Width="100" Height="50">Password</Label>
            <TextBox Width="100" Height="50" Name="Password"></TextBox>
            <Button Width="100" Height="50" Content="Log in" Click="Button_Click"></Button>

        </StackPanel>
        <DataGrid Name="showdata" Width="200" Height="200" VerticalAlignment="Bottom" HorizontalAlignment="Left" ></DataGrid>
    </Grid>
</Window>
